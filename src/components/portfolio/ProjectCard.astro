---
// Props
export interface Props {
    title: string;
    description: string;
    technologies: string[];
    repositoryUrl: string;
    projectUrl: string;
}

const { title, description, technologies, repositoryUrl, projectUrl } =
    Astro.props;
---

<div
    class="bg-white dark:bg-zinc-900 rounded-2xl shadow-md transition-shadow duration-300 p-6 flex flex-col justify-between h-full border dark:border-zinc-800 border-zinc-800"
>
    <div class="space-y-3">
        <h3 class="text-xl font-bold text-zinc-800 dark:text-white">{title}</h3>
        <p class="text-sm text-zinc-600 dark:text-zinc-300">{description}</p>

        <div class="flex flex-wrap gap-2 mt-4">
            {
                technologies.map((tech) => (
                    <span class="px-2 py-1 bg-zinc-100 dark:bg-zinc-800 text-xs rounded-md text-zinc-700 dark:text-zinc-300 border border-zinc-300 dark:border-zinc-700">
                        {tech}
                    </span>
                ))
            }
        </div>
    </div>

    <div class="flex gap-3 mt-6">
        {
            repositoryUrl && (
                <a
                    href={repositoryUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:underline"
                >
                    Repo
                </a>
            )
        }
        {
            projectUrl !== "N/A" && (
                <a
                    href={projectUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-sm font-medium text-green-600 dark:text-green-400 hover:underline"
                >
                    Demo
                </a>
            )
        }
    </div>
</div>
