---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

import enProjects from "@/i18n/translations/en/portfolio/projects_array";
import esProjects from "@/i18n/translations/es/portfolio/projects_array";

const projects = lang === "es" ? esProjects : enProjects;
---

<section class="py-10 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
    <div class="text-gray-900 dark:text-white mb-6">
        <p class="text-white text-2xl font-bold">{t("projects.title")}</p>

